<script src="/javascripts/lib/jquery.min.js"></script>
<script>
  let bgmList = ['/bgm/chengdu.mp3', '/bgm/fair.mp3'];
  let length = bgmList.length;
  let i = 0;
  // 结束后循环背景音乐
  function playBGm() {
    i ++
    if (i < length) {
      $('.J_audio').attr('src', bgmList[i]);
    } else {
      i = 0;
      $('.J_audio').attr('src', bgmList[i]);
    }
  }
</script>